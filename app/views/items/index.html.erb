<p id="notice"><%= notice %></p>

<h1>Items</h1>
<%= render "partials/flash" %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <td><%= item.price %></td>
        <td><%= link_to 'Add to basket', item %></td>
      </tr>
    <% end %>
  </tbody>
</table>