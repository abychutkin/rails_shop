<h2 class="title has-text-centered">Log in</h2>

<div class="columns is-centered">
  <div class="column is-one-third">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'block is-desktop'}) do |f| %>
    <div class="field">
      <%= f.label :email, class: 'label' %><br />
      <div class="control">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
      </div>
    </div>

    <div class="field">
      <%= f.label :password, class: 'label' %><br />
      <div class="control">
        <%= f.password_field :password, autocomplete: "current-password", class: "input" %>
      </div>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <div class="control">
          <%= f.check_box :remember_me, class: "checkbox" %>
          <%= f.label :remember_me, class: "checkbox" %>
        </div>
      </div>
    <% end %>

    <div class="actions control">
      <%= f.submit "Log in", class: 'button is-primary' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
</div>